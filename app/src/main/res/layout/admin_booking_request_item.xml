<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardElevation="10dp"
    android:layout_height="160dp">
    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/admin_request_client_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taha Khanzada"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/admin_request_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 12:03"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/admin_request_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 19/3/2021"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/admin_request_vehicle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Name: Mehran"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/admin_request_vehicle_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Type: car"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/admin_request_decline_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />
            <Button
                android:id="@+id/admin_request_accept_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>